    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
  },
  "include": [
    "lib/**/*.ts",
    "index.ts",
  ],
  "exclude": [
    "test/**/*.ts"
  ]
}