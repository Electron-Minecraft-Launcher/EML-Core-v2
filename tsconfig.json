{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "emlcore/*": [
        "./lib/*"
      ]
    }
  },
  "include": ["lib/**/*.ts", "index.ts", "index.d.ts"],
  "exclude": ["test/**/*.ts"]
}